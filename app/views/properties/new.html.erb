<h1 class="text-center mt-3">New property</h1>

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <%= simple_form_for(@property) do |f| %>
      <%= f.input :title  %>
      <%= f.input :description %>
      <%= f.input :address %>
      <%= f.input :price %>
      <%= number_to_currency(@property.price, :unit => "R$") %>
      <%= f.submit 'Create Property', class: "btn btn-default btn-primary" %>



    </div>
  </div>
</div>

<% end %>
